
 

<!-- Page Heading/Breadcrumbs -->
<div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">Queue</h1>
          <ol class="breadcrumb">
              <li><a href="/">Home</a>
              </li>
              <li class="active">Queue up</li>
          </ol>
      </div>
</div>

<div class="row">
      <div class="col-md-10">
            {{#if msg}}
                  <div class="alert alert-warning"><strong>Warning: </strong>{{msg}}</div>
            {{/if}}
            <div class="panel panel-default">
                  <div class="panel-heading">Current Queue</div>
                  <div class="panel-body">
                  <table class="table table-hover">
                  <thead>
                        <tr>
                        <th>Queue Position</th>
                        <th>User Name</th>
                        <th>Time</th>
                        </tr>
                  </thead>
                  {{#each result}}
                  <tbody>
                        <tr>
                        <td>{{this.qid}}</td>
                        <td>{{this.username}}</td>
                        <td>{{this.datetime}}</td>
                        </tr>
                  </tbody>
                  {{/each}}
                  </table>
                  </div>
            </div>
            <form id="enter" name="enter"  method="POST" enctype="multipart/form-data">
            <button type="submit" id="enter" class="btn btn-default">Enter the queue</button>
            </form>     
            {{!--<form id="remove" name="remove"  method="POST" enctype="multipart/form-data">
            <button type="submit" id="remove" class="btn btn-default">Remove from queue</button>          
            </form>        --}}
      </div>
</div>



