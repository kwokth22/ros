<!-- Page Content -->


<div class="container">
    <div class="col-md-6 col-md-offset-3" style="margin-top: 30px;">
        <h2>Sign up</h2>
        <form  id="signupform" name="signupform" ref='uploadForm' action="/signup" method="POST" encType="multipart/form-data">
          <div class="form-group">
            <label for="exampleInputEmail1">User name</label>
            <input name="username" type="text" class="form-control"  placeholder="E.g. kwok" required>
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <input id="name" name="name" type="text" class="form-control" placeholder="E.g. Kwok TH" required>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input  name="password" id="password" type="password" class="form-control" placeholder="Password" required>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Retype password</label>
            <input name="txtconfirmPassword" id="txtconfirmPassword" type="password" class="form-control"  placeholder="Password" onChange="checkPasswordMatch();" required>
          </div>
          <div class="form-group">
            <div id="divCheckPasswordMatch2" class="alert alert-success" style="display:none"></div>
           <div id="divCheckPasswordMatch" class="alert alert-danger" style="display:none"></div>
          </div>
          <div class="form-group">
            <label for="avatar">Avatar</label>
            <input name="avatar" type="file">
          </div>
           <div id="submit" style="display:none"> <button  type="submit" class="btn btn-default" >Sign up</button> </div>
        </form>

    </div>

</div>

<script>
    function checkPasswordMatch() {
      var password = $("#password").val();
      var confirmPassword = $("#txtconfirmPassword").val();
      if (password != confirmPassword){
          $("#submit").hide();
          $("#divCheckPasswordMatch").show("show");
          $("#divCheckPasswordMatch").html("Passwords do not match!");
        }
      else{
          $("#divCheckPasswordMatch2").show("show");
          $("#submit").show("show");
          $("#divCheckPasswordMatch2").html("Passwords match.");
        }
        $("#divCheckPasswordMatch").fadeOut(4000);
        $("#divCheckPasswordMatch2").fadeOut(5000);
    }


    $(document).ready(function () {
     $("#txtConfirmPassword").keyup(checkPasswordMatch);
    });
</script>
