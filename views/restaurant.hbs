<!-- Page Content -->
<div class="container">

<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            {{foodName}}
        </h1>
        <ol class="breadcrumb">
            <li><a href="/">Home</a>
            </li>
            <li class="active">
                {{foodName}}
            </li>
        </ol>
    </div>
</div>
<!-- /.row -->

<!-- Content Row -->
<div class="row">

    <!-- Blog Post Content Column -->
    <div class="col-lg-8">


        <!-- Date/Time -->
        <p>
            <i class="fa fa-clock-o"></i>
                Posted on {{postTime}}
        </p>

        <hr>

        <!-- Preview Image -->
        <img class="img-responsive" src="{{restImg}}">

        <hr>

        <!-- Post Content -->
        <p class="lead">
            {{restDescription}}
        </p>

        {{#if restDish.length}}
            {{each restDish}}
                <p>
                    {{this.Name}}:  {{this.Description}}
                </p>
        {{/if}}


        <hr>

        <!-- Where to eat-->
        {{#if location}}
        <div class="row">
            <div class="col-md-5">
                <u><i><h3>Where to eat</h3></i></u>
                <h5>Restaurant Name: {{restName}}</h5>
                <h5><label id="getLoca">Map Location</label></h5>
                <button type="button" class="btn btn-default btn-sm" onclick="showPosition()">
                <span class="glyphicon glyphicon-pushpin"></span>Click to open
                </button>
            </div>
            <!-- display map -->
            <div class="col-md-7">
                <div id="googleMap" style="width:400px;height:300px;display:none" ></div>
            </div>
        </div>
        <hr>
        {{/if}}

        <!-- Comments Form -->
        {{#if username}}
          <div class="well">
              <h4>Leave a Comment:</h4>
              <form role="form" method="POST" action="/restaurant/?post=true" enctype="multipart/form-data">
                  <div class="form-group">
                      <textarea name="comment" id="comment" class="form-control" rows="3" draggable="false" style="resize:none"></textarea>
                  </div>
                  <button type="submit" class="btn btn-primary">Submit</button>
              </form>
          </div>
        <hr>
        {{/if}}


        <!-- List Posted Comment -->
        {{#each comment}}
        <div id="comment" class="media">
          <!-- load avatar image-->
            <img class="media-object" src="{{this.avatar}}" width="64" height="64">
            <!--comment -->
            <div class="media-body">
                <h4 class="media-heading">{{this.username}}
                    <!--load date-->
                    <small>{{this.date}}</small>
                </h4>
                <!--load comment-->
                {{this.comment}}
            </div>
        </div>
        <hr>
        {{/each}}

    </div>

    <!-- Blog Sidebar Widgets Column -->
    <div class="col-md-4">

        <!-- Rating -->
        <div class="well">
            <h4>Rating: 1 to 5 </h4>
            <p>
            (1: boring<span class="glyphicon glyphicon-trash"></span> -  5: Most challenging<span class="glyphicon glyphicon-fire"></span> )</h4></p>
            <!--change action-->
            <form id="rating" name="rating" action="/restaurant/?rating=true" method="POST" enctype="multipart/form-data">
            <select name="rating" id="rating" class="form-control">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
            <br>
            <div class="row">
                <div class="col-lg-6">
                <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
          </form>
        </div>

        <!-- Side Widget Well -->
        <div class="well">
            <h4>Related Recommendation</h4>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Inventore, perspiciatis adipisci accusamus laudantium odit aliquam repellat tempore quos aspernatur vero.</p>
        </div>

    </div>

</div>

<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>

<script >
    var x = document.getElementById("getLoca");
    var y = document.getElementById("googleMap");
    function showPosition() {
      var dest = new google.maps.LatLng({{location.latitude}}, {{location.longitude}});
      var myOptions = {
        zoom: 20,
        mapTypeId: google.maps.MapTypeId.ROADMAP,
        center: dest
      }
      var map = new google.maps.Map(document.getElementById("googleMap"),myOptions);

      var marker = new google.maps.Marker({
        position:dest,
        animation:google.maps.Animation.BOUNCE
        });
      marker.setMap(map);
      y.style.display='inline-block';
    }
</script>
