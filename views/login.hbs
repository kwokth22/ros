<!-- Page Content -->


<div class="container">
    <div class="col-md-6 col-md-offset-3" style="margin-top: 30px;">
        <h2>Log in</h2>

        {{#if errorMsg}}
          <div class="alert alert-danger">
            <strong>Error!</strong>
              {{errorMsg}}
          </div>
        {{/if}}
        <form  id="loginform" name="loginform"  action="/login" method="POST" encType="multipart/form-data">
          <div class="form-group">
            <label for="user">Username</label>
            <input name="username" type="text" class="form-control" placeholder="Username">
          </div>
          <div class="form-group">
            <label for="pw">Password</label>
            <input name="pw" type="password" class="form-control" placeholder="Password">
          </div>
           <button type="submit" class="btn-primary pull-left" >Log in</button>
         </form>
         <div class="form-group">
           <form id="signup" action="/signup">
           <button type"sumbit" class="btn-success pull-right" >Not a member yet? Sign up Now</button>
           </form>
        </div>
    </div>
</div>
