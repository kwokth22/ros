{{#if sysMsg.success}}
<div class="row">
      <div class="alert alert-success">
      <strong>Success!</strong>{{sysMsg.content}}
    </div>
</div>
{{/if}}

<div class="row">
      <div class="col-md-10">
          <h3>Confirmation</h3>
          <p>Sender Name: {{username}}</p>
          <p>Receiver Name: {{receiverName}}</p>
          <p id="processStatus">Process Status: {{process}}</p>
          <p>Total Number of job: {{count}} </p>

      </div>
</div>

<script>
  var doc = document.getElementById('processStatus');
  if({{process}} == 1)
    doc.innerHTML = "Process Status: Processing";
  else
    doc.innerHTML = "Process Status: Not being processing";
    
  //set sumbit display none
  doc = document.getElementById('submit');
  if({{confirmed}} == 1)
    doc.style.display = "none";
  
</script>

